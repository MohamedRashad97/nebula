        <activity
            android:name="com.rashad.nebula.Recorder"
            android:label="@string/title_activity_recorder" >
        </activity>
        <activity
            android:name="com.rashad.nebula.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.rashad.nebula.Torch"
            android:label="@string/title_activity_torch" >
        </activity>
        <activity
            android:name="com.rashad.nebula.Calc"
            android:label="@string/title_activity_calc" >
        </activity>
        <activity
            android:name="com.rashad.nebula.Apps"
            android:label="@string/title_activity_apps" >
        </activity>
        <activity
            android:name="com.rashad.nebula.Calculator"
            android:label="@string/title_activity_calculator" >
        </activity>
        <activity
            android:name="com.rashad.nebula.Caclulator"
            android:label="@string/title_activity_caclulator" >
        </activity>
        <activity
            android:name="com.rashad.nebula.Timer"
            android:label="@string/title_activity_timer" >
        </activity>
    </application>

</manifest>
